<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   app:cardCornerRadius="4dp"
                                   app:cardElevation="8dp"
                                   android:layout_margin="10dp"
                                   app:cardPreventCornerOverlap="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_blog_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="-10dp"
                tools:background="@drawable/ic_launcher_background"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_blog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                tools:text="Background Limitations Android Oreo"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/black"
                android:layout_toEndOf="@+id/iv_blog_photo"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_blog_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="Desc :- Background Limitations Android Oreo"
                android:maxLines="6"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:layout_toEndOf="@+id/iv_blog_photo"
                android:layout_below="@+id/tv_blog_title"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>